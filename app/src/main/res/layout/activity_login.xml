<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastelYellow"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Login">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/loginForm"
                android:textAlignment="center"
                android:textColor="@color/pastelPurple"
                android:textSize="31sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/loginUsername"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:autofillHints="@string/unameLabel"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/username_icon"
                android:drawablePadding="8dp"
                android:hint="@string/unameLabel"
                android:inputType="text"
                android:padding="8dp"
                android:textColor="@color/forestGreen" />

            <EditText
                android:id="@+id/loginPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints="@string/passLabel"
                android:background="@drawable/custom_edittext"
                android:drawableStart="@drawable/password_icon"
                android:drawablePadding="8dp"
                android:hint="@string/passLabel"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/forestGreen" />

            <CheckBox
                android:id="@+id/rememberMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:buttonTint="@color/pastelPurple"
                android:text="@string/login_remember"
                android:textColor="@color/pastelPurple"
                android:textSize="18sp"
                />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/pastelPurple"
                android:text="@string/loginButton"
                android:textSize="20sp"
                app:cornerRadius="30dp" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/forgotPassword"
                android:textAlignment="center"
                android:textColor="@color/pastelPurple"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/redirect_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/goToRegister"
                android:textAlignment="center"
                android:textColor="@color/pastelPurple"
                android:textSize="18sp"
                android:textStyle="italic" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>